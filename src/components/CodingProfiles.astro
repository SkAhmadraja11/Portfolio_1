<style>
  .coding-profile-card {
    display: block;
    position: relative;
    overflow: hidden;
  }
  
  .coding-profile-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(157,127,245,0.1), rgba(255,170,212,0.1));
    opacity: 0;
    transition: opacity 0.4s ease;
  }
  
  .coding-profile-card:hover::before {
    opacity: 1;
  }
  
  .coding-profile-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 60px rgba(157, 127, 245, 0.4);
    border-color: rgba(157, 127, 245, 0.5);
  }
  
  @media (max-width: 768px) {
    .coding-profile-card {
      padding: 2rem !important;
    }
  }
</style>
